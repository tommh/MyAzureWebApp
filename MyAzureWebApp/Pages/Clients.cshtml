@page
@model MyAzureWebApp.Pages.ClientsModel
@{
    ViewData["Title"] = "Klienter";
}

<div class="container mt-4">
    <h2>Klientliste</h2>
    
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">
            <h4>Database Feil</h4>
            <p>@Model.ErrorMessage</p>
        </div>
    }
    else if (Model.Clients != null && Model.Clients.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Klient ID</th>
                        <th>Klient Navn</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var client in Model.Clients)
                    {
                        <tr>
                            <td>@client.ClientID</td>
                            <td>@client.ClientName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <div class="mt-3">
            <small class="text-muted">Viser @Model.Clients.Count() klienter</small>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h4>Ingen klienter funnet</h4>
            <p>Det er ingen klienter i databasen eller det oppstod en feil ved tilkobling til databasen.</p>
        </div>
    }
</div>
