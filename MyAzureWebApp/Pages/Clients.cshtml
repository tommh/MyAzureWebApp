@page
@model MyAzureWebApp.Pages.ClientsModel
@{
    ViewData["Title"] = "Clients";
}

<div class="container mt-4">
    <h2>Client List</h2>
    
    @if (Model.Clients != null && Model.Clients.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Client ID</th>
                        <th>Client Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var client in Model.Clients)
                    {
                        <tr>
                            <td>@client.ClientID</td>
                            <td>@client.ClientName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <div class="mt-3">
            <small class="text-muted">Showing @Model.Clients.Count() clients</small>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h4>No clients found</h4>
            <p>There are no clients in the database or there was an error connecting to the database.</p>
        </div>
    }
</div>
